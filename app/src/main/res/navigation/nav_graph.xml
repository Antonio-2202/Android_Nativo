<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/clientFragment">

    <fragment
        android:id="@+id/clientFragment"
        android:name="com.example.learning_andriod.ClientFragment"
        android:label="fragment_client"
        tools:layout="@layout/fragment_client">
        <action
            android:id="@+id/action_clientFragment_to_commercialDemandFragment"
            app:destination="@id/commercialDemandFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/commercialDemandFragment"
        android:name="com.example.learning_andriod.CommercialDemandFragment"
        android:label="fragment_commercial_demand"
        tools:layout="@layout/fragment_commercial_demand">
        <action
            android:id="@+id/action_commercialDemandFragment_to_visitFragment"
            app:destination="@id/visitFragment" />
        <argument
            android:name="username"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/visitFragment"
        android:name="com.example.learning_andriod.VisitFragment"
        android:label="fragment_visit"
        tools:layout="@layout/fragment_visit"/>
</navigation>